<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="dressing.asi.insarouen.fr.dressing.fragment.AccueilFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/couleur2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/shapeInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_alignParentTop="true"
                android:background="@drawable/shape_user_informations"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/nomPrenom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/userPrenom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:textColor="@color/colorFushia"
                        android:textStyle="bold"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/userNom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorFushia"
                        android:textStyle="bold"
                        android:textSize="20sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/labelAgeUtilisateur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/nomPrenom"
                    android:textColor="@color/colorFushia"
                    android:text="@string/userAge" />

                <TextView
                    android:id="@+id/ageUtilisateur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colorFushia"
                    android:layout_below="@+id/nomPrenom" />

                <TextView
                    android:id="@+id/labelTailleUtilisateur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/labelAgeUtilisateur"
                    android:textColor="@color/colorFushia"
                    android:text="@string/userHeight" />

                <TextView
                    android:id="@+id/tailleUtilisateur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colorFushia"
                    android:layout_below="@id/labelAgeUtilisateur" />

                <TextView
                    android:id="@+id/labelCouleurCheveuxUtilisateur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/labelTailleUtilisateur"
                    android:textColor="@color/colorFushia"
                    android:text="@string/userHairColor" />

                <TextView
                    android:id="@+id/couleurCheveuxUtilisateur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colorFushia"
                    android:layout_below="@id/labelTailleUtilisateur" />

                <TextView
                    android:id="@+id/labelCouleurPrefereeUtilisateur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/colorFushia"
                    android:layout_below="@+id/labelCouleurCheveuxUtilisateur"
                    android:text="@string/userPreferedColor" />

                <TextView
                    android:id="@+id/couleurPrefereeUtilisateur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colorFushia"
                    android:layout_below="@+id/labelCouleurCheveuxUtilisateur" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/advice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shapeInfo"
                android:layout_marginBottom="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="20dp"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/perso"
                    android:layout_width="130dp"
                    android:layout_height="160dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/female_hair_with_hat" />

                <TextView
                    android:id="@+id/textAdvice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/perso"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/shape_advices" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/advice"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true">

                <Button
                    android:id="@+id/dressing"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/layer_dressing" />


                <Button
                    android:id="@+id/corbeille"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/dressing"
                    android:background="@drawable/layer_corbeille" />


                <Button
                    android:id="@+id/tenue"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@id/corbeille"
                    android:background="@drawable/layer_tenue" />


            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</LinearLayout>
